{
    "version": "2.0.0",
    "tasks": [
        {
			"label": "cmake",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"command": "cmake",
			"args": [
				"${workspaceRoot}"
			],
			"presentation": {
				"showReuseMessage": false,
				"reveal": "silent",            
            }
        },
        {
			"label": "make",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"command": "make",
			"presentation": {
				"showReuseMessage": false,
				"reveal": "silent",
		   },
        },
        {
			"label": "run",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}/projects/example"
			},
			"command": "./app",
			"presentation": {
				"showReuseMessage": false,
				"reveal": "always",
		   }
        },
        {
			"label": "build",
			"dependsOn": [
				"cmake",
				"make",
				"run",
			],
			"dependsOrder": "sequence",
			"problemMatcher": [
				"$gcc"
			]
		}
    ]




}